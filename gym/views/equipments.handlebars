<div class="main-body">
    <div id="create-form-section">
        <form action="/equipment/add" method="post">
            <div class="form-group">
                <input type="text" placeholder="Equipment Name" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn-primary">Create</button>
            </div>
        </form>
    </div>
    <div id="update-form-section">
        <form  id="update-form">
            <div class="form-group">
                <input type="text" name="name"  id="updatename" placeholder="Name" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
<div class="table-section">
    <table id="equipments-table">
        <caption id="table-title">Equipments</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each equipments}}
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td><button class="btn-alert">Edit</button></td>
                <td><button class="btn-danger">Delete</button></td>
            {{/each}}
        </tbody>
    </table>
</div>