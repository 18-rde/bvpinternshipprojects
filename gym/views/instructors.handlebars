<div class="main-body">
    <div class="create-form-section">
        <form action="/instructor/add" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" name="name" id="" placeholder="Name" class="form-control">
            </div>
            <div class="form-group">
                <input type="file" name="picture" class="form-control" placeholder="File" id="">
            </div>
            <div class="form-group">
                <input type="text" name="speciality" placeholder="Speciality" id="" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn-primary">Create</button>
            </div>
        </form>
    </div>
    <div class="update-form-section">
        <form  id="update-instructor-form">
            <div class="form-group">
                <input type="text" name="id" class="form-control" id="updateid" readonly>
            </div>
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Name" id="updatename">
            </div>
            <div class="form-group">
                <input type="text" name="speciality" placeholder="Speciality" id="" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
<div class="table-section">
    <table id="instructor-table">
        <caption id="table-title">Instructors</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Speciality</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each instructors}}
             <tr>
                 <td>{{this.id}}</td>
                 <td>{{this.name}}</td>
                 <td><img src="{{this.picture}}" alt=""></td>
                 <td>{{this.speciality}}</td>
                 <td><button class="btn-alert">Edit</button></td>
                 <td><button class="btn-danger">Delete</button></td>
             </tr>
            {{/each}}
        </tbody>
    </table>
</div>