<div class="main-body">
    <div class="create-form-section">
        <form action="/member/add" method="post">
            <div class="form-group">
                <input type="text" name="name" id="" placeholder="name" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" name="age" placeholder="Age" id="" class="form-control">
            </div>
            <div class="form-control">
                <input type="file" name="picture" id="" class="form-control">
            </div>
            <div class="form-control">
                <button class="btn-primary">Add</button>
            </div>
        </form>
    </div>
    <div class="update-form-section">
        <form  id="update-member-form">
            <div class="form-group">
                <input type="number" class="form-control" id="updateid">
            </div>
            <div class="form-group">
                <input type="text" name="name" id="updatename" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" name="age" placeholder="Age" id="updateage" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
<div class="table-section">
    <table id="member-table">
        <caption id="table-title">Members</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Image</th>
                <th>JoinedOn</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each members}}
              <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.age}}</td>
                  <td><img src="{{this.picture}}" alt=""></td>
                  <td>{{this.joinedon}}</td>
                  <td><button class="btn-alert">Edit</button></td>
                  <td><button class="btn-danger">Delete</button></td>
              </tr>
            {{/each}}
        </tbody>
    </table>
</div>